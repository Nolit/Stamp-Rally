<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.om1.stamp_rally.MainActivity">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/MyPage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="35dp">

                        <TextView
                            android:text="マイページ"
                            android:layout_width="216dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/MyPageView"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:text="新規会員登録"
                            android:layout_width="match_parent"
                            android:id="@+id/newMem"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="14sp"
                            android:layout_row="0"
                            android:layout_column="3"
                            android:textAlignment="center"
                            android:layout_weight="1" />

                        <Button
                            android:text="ログイン"
                            android:layout_width="match_parent"
                            android:layout_height="33dp"
                            android:id="@+id/login"
                            android:fontFamily="sans-serif-medium"
                            android:elevation="0dp"
                            android:textSize="10sp"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1"
                        android:layout_weight="0.81">

                        <ImageView
                            android:layout_width="138dp"
                            android:layout_height="153dp"
                            app:srcCompat="@mipmap/ic_launcher"
                            android:id="@+id/imageView"
                            android:layout_row="1"
                            android:layout_column="0" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="138dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.95"
                            android:weightSum="1">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="1">

                                <TextView
                                    android:text="OIC太郎"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView7"
                                    android:textSize="30sp"
                                    android:layout_weight="0.76"
                                    android:textColor="@android:color/black" />

                                <Button
                                    android:text="フォロー"
                                    android:layout_width="58dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/button6"
                                    android:textSize="12sp"
                                    android:layout_weight="0.28"
                                    android:textColor="@android:color/black" />
                            </LinearLayout>

                            <TextView
                                android:text="　　ID:12345678"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView9"
                                android:textAlignment="textStart"
                                android:textSize="12sp" />

                            <TextView
                                android:text="オススメスタンプラリー"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView8"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:textColor="@android:color/black" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <TextView
                                android:text="マイベストスタンプラリー"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView10"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:textColor="@android:color/black" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:text="フォロー:12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView13"
                                    android:layout_weight="36.70"
                                    android:textSize="12sp" />

                                <TextView
                                    android:text="フォロワー:10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView14"
                                    android:layout_weight="45.27"
                                    android:textSize="12sp" />

                                <TextView
                                    android:text="マイスタンプ帳:22"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView11"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/TimeLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/TOP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="1"
                        android:layout_weight="0.81">

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

</android.support.design.widget.CoordinatorLayout>
