<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.om1.stamp_rally.controller.MainActivity">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/TOP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_weight="0.81">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="match_parent"
                                app:srcCompat="@mipmap/ic_launcher"
                                android:id="@+id/ThemeImage"
                                android:layout_height="150dp" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <ImageView
                                android:layout_width="match_parent"
                                app:srcCompat="@mipmap/ic_launcher"
                                android:id="@+id/OfficialImage"
                                android:layout_height="80dp" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <FrameLayout
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_width="360dp">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="97dp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        app:srcCompat="@mipmap/ic_launcher"
                                        android:id="@+id/IntroductionImage1"
                                        android:layout_weight="1" />

                                    <Space
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.20" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        app:srcCompat="@mipmap/ic_launcher"
                                        android:id="@+id/IntroductionImage2"
                                        android:layout_weight="1" />

                                    <Space
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.20" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        app:srcCompat="@mipmap/ic_launcher"
                                        android:id="@+id/IntroductionImage3"
                                        android:layout_weight="1" />
                                </LinearLayout>
                            </FrameLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <FrameLayout android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_width="360dp">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:inputType="textPersonName"
                                        android:text="検索内容入力"
                                        android:ems="10"
                                        android:id="@+id/SearchEdit"
                                        android:layout_weight="0.03" />

                                    <Space
                                        android:layout_width="10dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.01" />

                                    <Button
                                        android:text="検索"
                                        android:layout_width="54dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.01"
                                        android:id="@+id/SearchButton" />
                                </LinearLayout>
                            </FrameLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <TextView
                                android:text="週刊ランキング"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/RankingsText"
                                android:textSize="24sp"
                                android:textColor="@android:color/black" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="60dp">

                                <Space
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.03"
                                    android:layout_width="0dp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@mipmap/ic_launcher"
                                    android:id="@+id/StamoRallyImage1"
                                    android:layout_weight="0.03" />

                                <TextView
                                    android:text="1位：東京ラーメンめぐり"
                                    android:layout_width="33dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/RankingText1"
                                    android:layout_weight="0.18"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="60dp">

                                <Space
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.03"
                                    android:layout_width="0dp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@mipmap/ic_launcher"
                                    android:id="@+id/StamoRallyImage2"
                                    android:layout_weight="0.03" />

                                <TextView
                                    android:text="2位：東京とんかつめぐり"
                                    android:layout_width="33dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/RankingText2"
                                    android:layout_weight="0.18"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="60dp">

                                <Space
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.03"
                                    android:layout_width="0dp" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@mipmap/ic_launcher"
                                    android:id="@+id/StamoRallyImage3"
                                    android:layout_weight="0.03" />

                                <TextView
                                    android:text="3位：東京うどんめぐり"
                                    android:layout_width="33dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/RankingText3"
                                    android:layout_weight="0.18"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black" />
                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/MyPage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="123dp"
                        android:weightSum="1"
                        android:layout_weight="0.07">

                        <ImageView
                            android:layout_width="138dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@mipmap/ic_launcher"
                            android:id="@+id/imageView"
                            android:layout_row="1"
                            android:layout_column="0" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="138dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.95"
                            android:weightSum="1">

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="14dp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="33dp"
                                android:weightSum="1">

                                <TextView
                                    android:text="OIC太郎"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView7"
                                    android:textSize="24sp"
                                    android:layout_weight="0.86"
                                    android:textColor="@android:color/black" />

                                <Button
                                    android:text="フォロー"
                                    android:layout_width="58dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/button6"
                                    android:textSize="12sp"
                                    android:layout_weight="0.19"
                                    android:textColor="@android:color/black" />
                            </LinearLayout>

                            <TextView
                                android:text="　　ID:12345678"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView9"
                                android:textAlignment="textStart"
                                android:textSize="12sp" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <TextView
                                android:text="オススメスタンプラリー"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView8"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:textColor="@android:color/holo_green_light" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="フォロー:12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView13"
                                    android:layout_weight="36.70"
                                    android:textSize="12sp" />

                                <TextView
                                    android:text="フォロワー:10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView14"
                                    android:layout_weight="45.27"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <TextView
                                android:text="マイスタンプ帳:22"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView11"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_weight="0.27">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:text="紹介文"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView15"
                                android:textSize="18sp" />

                            <TextView
                                android:text="こんにちは"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView10"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/TimeLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/StampRally"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="13"
                            android:text="ここにタブを配置する"/>



                        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            >

                            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                                xmlns:map="http://schemas.android.com/apk/res-auto"
                                xmlns:tools="http://schemas.android.com/tools"
                                android:id="@+id/map"
                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:context="com.example.air.map.com.om1.stamp_rally.controller.MapsActivity"
                                map:mapType="normal"
                                map:cameraZoom="15"
                                map:uiTiltGestures="false"
                                map:uiRotateGestures="false"
                                />

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/cameraIcon"
                                android:layout_gravity="center_horizontal|bottom"
                                android:src="@mipmap/camera_icon" />

                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/StampRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/NewMember"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

</android.support.design.widget.CoordinatorLayout>
