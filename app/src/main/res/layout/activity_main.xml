<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.om1.stamp_rally.controller.MainActivity">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/TOP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_weight="0.81">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="match_parent"
                                app:srcCompat="@mipmap/ic_launcher"
                                android:id="@+id/ThemeImage"
                                android:src="@drawable/s256_f_object_151_0bg"
                                android:background="@color/common_google_signin_btn_text_light_disabled"
                                android:layout_height="80dp" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:src="@drawable/s256_f_object_151_0bg"
                                app:srcCompat="@mipmap/ic_launcher"
                                android:id="@+id/OfficialImage"
                                android:background="@color/common_google_signin_btn_text_light_disabled"
                                android:layout_height="150dp" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <FrameLayout
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_width="370dp"
                                android:layout_height="120dp">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="370dp"
                                    android:layout_height="120dp">

                                    <ImageView
                                        android:src="@drawable/s256_f_object_151_0bg"
                                        app:srcCompat="@mipmap/ic_launcher"
                                        android:id="@+id/IntroductionImage1"
                                        android:layout_weight="1"
                                        android:background="@color/common_google_signin_btn_text_light_disabled"
                                        android:layout_width="120dp"
                                        android:layout_height="120dp" />

                                    <Space
                                        android:layout_height="100dp"
                                        android:layout_weight="0.20"
                                        android:layout_width="5dp" />

                                    <ImageView
                                        android:src="@drawable/s256_f_object_151_0bg"
                                        app:srcCompat="@mipmap/ic_launcher"
                                        android:id="@+id/IntroductionImage2"
                                        android:layout_weight="1"
                                        android:background="@color/common_google_signin_btn_text_light_disabled"
                                        android:layout_width="120dp"
                                        android:layout_height="120dp" />

                                    <Space
                                        android:layout_height="100dp"
                                        android:layout_weight="0.20"
                                        android:layout_width="5dp" />

                                    <ImageView
                                        android:src="@drawable/s256_f_object_151_0bg"
                                        app:srcCompat="@mipmap/ic_launcher"
                                        android:id="@+id/IntroductionImage3"
                                        android:layout_weight="1"
                                        android:background="@color/common_google_signin_btn_text_light_disabled"
                                        android:layout_width="120dp"
                                        android:layout_height="120dp" />
                                </LinearLayout>
                            </FrameLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <FrameLayout android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_width="380dp">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="360dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|center_horizontal">

                                    <EditText
                                        android:id="@+id/SearchEdit"
                                        android:layout_height="wrap_content"
                                        android:hint="検索"
                                        android:inputType="textEmailAddress"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:layout_weight="0.07"
                                        android:layout_width="280dp" />

                                    <Space
                                        android:layout_width="10dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.01" />

                                    <Button
                                        android:text="検索"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.01"
                                        android:id="@+id/SearchBt"
                                        android:layout_width="70dp" />
                                </LinearLayout>
                            </FrameLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <TextView
                                android:text="週刊ランキング"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/RankingsText"
                                android:textSize="24sp"
                                android:textColor="@android:color/black" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="380dp"
                                android:layout_height="100dp">

                                <Space
                                    android:layout_height="100dp"
                                    android:layout_weight="0.03"
                                    android:layout_width="10dp" />

                                <ImageView
                                    android:layout_width="100dp"
                                    android:src="@drawable/s256_f_object_151_0bg"
                                    android:layout_height="100dp"
                                    app:srcCompat="@mipmap/ic_launcher"
                                    android:id="@+id/StamoRallyImage1"
                                    android:layout_weight="0.03"
                                    android:background="@color/common_google_signin_btn_text_light_disabled" />

                                <TextView
                                    android:text="1位：東京ラーメンめぐり"
                                    android:layout_height="100dp"
                                    android:id="@+id/RankingText1"
                                    android:layout_weight="0.18"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:textSize="18sp"
                                    android:textColor="@android:color/black"
                                    android:layout_width="270dp"
                                    android:gravity="center" />
                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="380dp"
                                android:layout_height="100dp">

                                <Space
                                    android:layout_height="100dp"
                                    android:layout_weight="0.03"
                                    android:layout_width="10dp" />

                                <ImageView
                                    android:layout_width="100dp"
                                    android:src="@drawable/s256_f_object_151_0bg"
                                    android:layout_height="100dp"
                                    app:srcCompat="@mipmap/ic_launcher"
                                    android:id="@+id/StamoRallyImage2"
                                    android:layout_weight="0.03"
                                    android:background="@color/common_google_signin_btn_text_light_disabled" />

                                <TextView
                                    android:text="2位：東京とんかつめぐり"
                                    android:layout_height="100dp"
                                    android:id="@+id/RankingText2"
                                    android:layout_weight="0.18"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:textSize="18sp"
                                    android:textColor="@android:color/black"
                                    android:layout_width="270dp"
                                    android:gravity="center" />
                            </LinearLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="380dp"
                                android:layout_height="100dp">

                                <Space
                                    android:layout_height="100dp"
                                    android:layout_weight="0.03"
                                    android:layout_width="10dp" />

                                <ImageView
                                    android:layout_height="100dp"
                                    android:src="@drawable/s256_f_object_151_0bg"
                                    app:srcCompat="@mipmap/ic_launcher"
                                    android:id="@+id/StamoRallyImage3"
                                    android:layout_weight="0.03"
                                    android:background="@color/common_google_signin_btn_text_light_disabled"
                                    android:layout_width="100dp" />

                                <TextView
                                    android:text="3位：東京うどんめぐり"
                                    android:layout_height="100dp"
                                    android:id="@+id/RankingText3"
                                    android:layout_weight="0.18"
                                    android:layout_gravity="center_vertical|center_horizontal"
                                    android:textSize="18sp"
                                    android:textColor="@android:color/black"
                                    android:layout_width="270dp"
                                    android:gravity="center" />
                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.27">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"></LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="380dp"
                                android:layout_height="30dp">

                                <TextView
                                    android:text="OIC太郎さんのマイページ"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView3"
                                    android:layout_weight="1"
                                    android:layout_width="300dp"
                                    android:gravity="center_vertical|fill_horizontal|center"
                                    android:textSize="18sp" />

                                <Button
                                    android:text="ログアウト"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/LogoutBt"
                                    android:layout_weight="1"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="380dp"
                                android:weightSum="1"
                                android:layout_height="150dp">

                                <ImageView
                                    android:layout_height="150dp"
                                    app:srcCompat="@mipmap/ic_launcher"
                                    android:src="@drawable/s256_f_object_151_0bg"
                                    android:id="@+id/imageView"
                                    android:layout_row="1"
                                    android:layout_column="0"
                                    android:background="@color/common_google_signin_btn_text_dark_disabled"
                                    android:layout_width="150dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_height="150dp"
                                    android:layout_weight="0.95"
                                    android:weightSum="1"
                                    android:layout_width="230dp">

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="5dp" />

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:weightSum="1"
                                        android:layout_height="35dp">

                                        <TextView
                                            android:text="OIC太郎"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/NameTxt"
                                            android:textSize="24sp"
                                            android:layout_weight="0.86"
                                            android:textColor="@android:color/black" />

                                        <Button
                                            android:text="設定"
                                            android:layout_width="58dp"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/ConfigurationBt"
                                            android:textSize="14sp"
                                            android:textColor="@android:color/black"
                                            android:textStyle="normal|bold"
                                            android:gravity="center" />
                                    </LinearLayout>

                                    <TextView
                                        android:text="　　ID:12345678"
                                        android:layout_width="match_parent"
                                        android:id="@+id/IdTxt"
                                        android:textAlignment="textStart"
                                        android:textSize="12sp"
                                        android:layout_height="15dp" />

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="5dp" />

                                    <TextView
                                        android:text="オススメスタンプラリー"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:id="@+id/FavoriteTxt"
                                        android:textSize="18sp"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/holo_green_light" />

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="5dp" />

                                    <TextView
                                        android:text="マイスタンプラリー（22）"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:id="@+id/MyStampTxt"
                                        android:textSize="18sp"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/holo_orange_light" />

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="5dp" />

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp">

                                        <TextView
                                            android:text="フォロー:12"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/FollowTxt"
                                            android:layout_weight="36.70"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:text="フォロワー:10"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/FollowerTxt"
                                            android:layout_weight="45.27"
                                            android:textSize="12sp" />



                                    </LinearLayout>

                                    <TextView
                                        android:text="　友達を探す"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:id="@+id/FriendSearch"
                                        android:textSize="16sp"
                                        android:textAlignment="inherit"
                                        android:textColor="@android:color/holo_blue_light" />


                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:text="紹介文"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.27"
                                android:id="@+id/IntroductionTxt" />

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="100dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:text="よろしくお願いします。"
                                        android:layout_width="match_parent"
                                        android:id="@+id/ContentsTxt"
                                        android:textSize="14sp"
                                        android:layout_height="100dp" />
                                </LinearLayout>
                            </ScrollView>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="5dp" />

                            <TextView
                                android:text="OIC太郎さんのタイムライン"
                                android:layout_width="match_parent"
                                android:id="@+id/TimeLineTxt"
                                android:textColor="?attr/actionModeSplitBackground"
                                android:textSize="18sp"
                                android:layout_height="20dp" />

                            <ListView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/TimeLineLV" />

                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <ImageView
                        android:layout_width="133dp"
                        android:layout_height="129dp"
                        android:src="@drawable/s256_f_object_151_0bg"
                        app:srcCompat="@mipmap/ic_launcher"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@color/common_google_signin_btn_text_light_disabled"
                        android:id="@+id/LoginThemeImage"
                        android:layout_weight="0.09" />

                    <ScrollView
                        android:id="@+id/login_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/email_login_form"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/emailAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/prompt_email"
                                    android:ems="10"
                                    android:inputType="textEmailAddress"
                                    android:maxLines="1"
                                    android:singleLine="true" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/password"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Password"
                                    android:ems="10"
                                    android:imeActionId="@+id/login"
                                    android:inputType="textPassword"
                                    android:maxLines="1"
                                    android:singleLine="true" />

                            </android.support.design.widget.TextInputLayout>

                            <Button
                                android:id="@+id/LoginBt"
                                style="?android:textAppearanceSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Login"
                                android:textStyle="bold"
                                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                                android:textSize="14sp" />

                        </LinearLayout>
                    </ScrollView>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="43dp">

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="4.50" />

                        <TextView
                            android:text="新規会員登録"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/newmember"
                            android:layout_weight="0.31"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/TimeLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/StampRally"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/StampRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <include layout="@layout/activity_stamp_registration" android:id="@+id/content_stamp_registration"/>

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</android.support.design.widget.CoordinatorLayout>
