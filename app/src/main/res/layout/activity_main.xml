<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.om1.stamp_rally.controller.MainActivity">

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/TOP"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#ADD8E6"
                    android:weightSum="1"
                    android:layout_weight="0.81">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="match_parent"
                                android:id="@+id/ThemeImage"
                                android:src="@mipmap/ic_stampshare_theme"
                                android:background="#ADD8E6"
                                android:layout_height="50dp" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:src="@mipmap/oosakajo"
                                android:id="@+id/OfficialImage"
                                android:layout_height="200dp"
                                android:layout_marginTop="10dp"
                                android:focusable="true"
                                android:focusableInTouchMode="true">
                                <requestFocus />
                            </ImageView>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="center_vertical|center_horizontal">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:src="@mipmap/sample_view_colosseo"
                                        android:id="@+id/IntroductionImage1"
                                        android:layout_weight="1"
                                        android:scaleType="fitXY"
                                        android:adjustViewBounds="true"
                                        android:background="@null"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"/>

                                    <ImageView
                                        android:src="@mipmap/sample_view_pisa"
                                        android:id="@+id/IntroductionImage2"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:scaleType="fitXY"
                                        android:adjustViewBounds="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp" />

                                    <ImageView
                                        android:src="@mipmap/sample_view_duomo"
                                        android:id="@+id/IntroductionImage3"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:scaleType="fitXY"
                                        android:adjustViewBounds="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp" />
                                </LinearLayout>

                            </FrameLayout>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="10dp" />

                            <FrameLayout android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:layout_width="380dp">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="360dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|center_horizontal">

                                    <EditText
                                        android:id="@+id/SearchEdit"
                                        android:layout_height="wrap_content"
                                        android:hint="検索"
                                        android:inputType="textEmailAddress"
                                        android:maxLines="1"
                                        android:singleLine="true"
                                        android:layout_weight="0.07"
                                        android:layout_width="280dp" />

                                    <Space
                                        android:layout_width="10dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.01" />

                                    <Button
                                        android:text="検索"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="0.01"
                                        android:id="@+id/SearchBt"
                                        android:layout_width="70dp" />
                                </LinearLayout>
                            </FrameLayout>

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.27">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"></LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="380dp"
                                android:layout_height="30dp">

                                <TextView
                                    android:text="OIC太郎さんのマイページ"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView3"
                                    android:layout_weight="1"
                                    android:layout_width="300dp"
                                    android:gravity="center_vertical|fill_horizontal|center"
                                    android:textSize="18sp" />

                                <Button
                                    android:text="ログアウト"
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/LogoutBt"
                                    android:layout_weight="1"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="380dp"
                                android:weightSum="1"
                                android:layout_height="150dp">

                                <ImageView
                                    android:layout_height="150dp"
                                    app:srcCompat="@mipmap/ic_launcher"
                                    android:src="@drawable/s256_f_object_151_0bg"
                                    android:id="@+id/imageView"
                                    android:layout_row="1"
                                    android:layout_column="0"
                                    android:background="@color/common_google_signin_btn_text_dark_disabled"
                                    android:layout_width="150dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_height="150dp"
                                    android:layout_weight="0.95"
                                    android:weightSum="1"
                                    android:layout_width="230dp">

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="5dp" />

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:weightSum="1"
                                        android:layout_height="35dp">

                                        <TextView
                                            android:text="OIC太郎"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/NameTxt"
                                            android:textSize="24sp"
                                            android:layout_weight="0.86"
                                            android:textColor="@android:color/black" />

                                        <Button
                                            android:text="設定"
                                            android:layout_width="58dp"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/ConfigurationBt"
                                            android:textSize="14sp"
                                            android:textColor="@android:color/black"
                                            android:textStyle="normal|bold"
                                            android:gravity="center" />
                                    </LinearLayout>

                                    <TextView
                                        android:text="　　ID:12345678"
                                        android:layout_width="match_parent"
                                        android:id="@+id/IdTxt"
                                        android:textAlignment="textStart"
                                        android:textSize="12sp"
                                        android:layout_height="15dp" />

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="5dp" />

                                    <TextView
                                        android:text="オススメスタンプラリー"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:id="@+id/FavoriteTxt"
                                        android:textSize="18sp"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/holo_green_light" />

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="5dp" />

                                    <TextView
                                        android:text="マイスタンプラリー（22）"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:id="@+id/MyStampTxt"
                                        android:textSize="18sp"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/holo_orange_light" />

                                    <Space
                                        android:layout_width="match_parent"
                                        android:layout_height="5dp" />

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp">

                                        <TextView
                                            android:text="フォロー:12"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/FollowTxt"
                                            android:layout_weight="36.70"
                                            android:textSize="12sp" />

                                        <TextView
                                            android:text="フォロワー:10"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/FollowerTxt"
                                            android:layout_weight="45.27"
                                            android:textSize="12sp" />



                                    </LinearLayout>

                                    <TextView
                                        android:text="　友達を探す"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        android:id="@+id/FriendSearch"
                                        android:textSize="16sp"
                                        android:textAlignment="inherit"
                                        android:textColor="@android:color/holo_blue_light" />


                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:text="紹介文"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.27"
                                android:id="@+id/IntroductionTxt" />

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="100dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:text="よろしくお願いします。"
                                        android:layout_width="match_parent"
                                        android:id="@+id/ContentsTxt"
                                        android:textSize="14sp"
                                        android:layout_height="100dp" />
                                </LinearLayout>
                            </ScrollView>

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="5dp" />

                            <TextView
                                android:text="OIC太郎さんのタイムライン"
                                android:layout_width="match_parent"
                                android:id="@+id/TimeLineTxt"
                                android:textColor="?attr/actionModeSplitBackground"
                                android:textSize="18sp"
                                android:layout_height="20dp" />

                            <ListView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/TimeLineLV" />

                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/TimeLine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/StampRally"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/StampRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <include layout="@layout/activity_stamp_registration" android:id="@+id/content_stamp_registration"/>

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</android.support.design.widget.CoordinatorLayout>
