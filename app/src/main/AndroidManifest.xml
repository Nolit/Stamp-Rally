<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.om1.stamp_rally">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_UPDATES" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".controller.SampleActivity"
            android:label="SampleActivity">
        </activity>
        <activity
            android:name=".controller.SampleGPSActivity"
            android:label="@string/title_activity_gps"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".NewMemberActivity"
            android:label="@string/title_activity_new_member"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TopPage"
            android:label="@string/title_activity_top_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConfigurationActivity"
            android:label="@string/title_activity_configuration"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FollowActivity"
            android:label="@string/title_activity_follow"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FollowerActivity"
            android:label="@string/title_activity_follower"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyStampActivity"
            android:label="@string/title_activity_mystamp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StampDetailActivity"
            android:label="@string/title_activity_stamp_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CompleteRallyActivity"
            android:label="@string/title_activity_complete_rally"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FavoriteRallyActivity"
            android:label="@string/title_activity_favorite_rally"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RallyDetailActivity"
            android:label="@string/title_activity_rally_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>